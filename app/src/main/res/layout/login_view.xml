<?xml version="1.0" encoding="utf-8"?>
<com.example.mvcmvpmvvmdemo.view.LoginView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mLoginView"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/mUserNameTv"
        android:hint="请输入账号"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/mPasswordTv"
        android:hint="请输入密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/mLoginBtn"
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</com.example.mvcmvpmvvmdemo.view.LoginView>